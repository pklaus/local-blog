{% extends "base.jinja2" %}

{% block page_title %}{{ post.title }} | {{ blog_title }}{% endblock %}

{% block content %}
  <div class="blog-post">
    <h2 class="blog-post-title">{{ post.title }}</h2>
    <p class="blog-post-meta">
      <div>Categories: {{ post.categories|join(', ') }}</div>
      <div>Tags: {{ post.tags|join(', ') }}</div>
    </p>
    {{ post.rendered_content }}
  </div>
{% endblock %}

