{% extends "base.jinja2" %}

{% block page_title %}{{ post.title }} | {{ blog_title }}{% endblock %}

{% block content %}
  <div class="blog-post">
    <h2 class="blog-post-title">{{ post.title }}</h2>
    <p class="blog-post-meta">
      {{ post.creation_date.strftime("%Y-%m-%d %H:%M") }}<br />
      Category: {{ post.categories|join(', ') }}<br />
      Tags: {{ post.tags|join(', ') }}
    </p>
    {{ post.rendered_content }}
  </div>
{% endblock %}

