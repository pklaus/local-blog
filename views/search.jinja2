{% extends "base.jinja2" %}

{% block title %}Blog Post{% endblock %}

{% block content %}
  {% for post in results %}
  <div id="headsection">
    <h2>{{ post.title }}</h2>
      <div>Categories: {{ post.categories|join(', ') }}</div>
      <div>Tags: {{ post.tags|join(', ') }}</div>
      <div>Link: <a href="{{ post.address }}">{{post.address}}</a></div>
    <div id="content">
  </div>
  {% endfor %}
{% endblock %}

