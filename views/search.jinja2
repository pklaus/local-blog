{% extends "base.jinja2" %}

{% block page_title %}Search for {{ search_term or "words in this blog" }}{% endblock %}

{% block content %}
  {% for post in results %}
  <div class="blog-post">
    <h2 class="blog-post-title">{{ post.title }}</h2>
    <p class="blog-post-meta">
      <div>Categories: {{ post.categories|join(', ') }}</div>
      <div>Tags: {{ post.tags|join(', ') }}</div>
      <div>Link: <a href="{{ post.address }}">{{post.address}}</a></div>
    </p>
  </div>
  {% endfor %}
{% endblock %}

