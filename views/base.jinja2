<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% if meta_description is defined and meta_description%}
      <meta name="description" content="{{ meta_description }}">
    {% endif %}
    {% if meta_author is defined and meta_author %}
      <meta name="author" content="{{ meta_author }}">
    {% endif %}
    {% if meta_date is defined and meta_date %}
      <meta name="date" content="{{ meta_date }}">
    {% endif %}
    {% if meta_revised is defined and meta_revised %}
      <meta name="revised" content="{{ meta_revised }}">
    {% endif %}
    {% if meta_copyright is defined and meta_copyright %}
      <meta name="copyright" content="{{ meta_copyright }}">
    {% endif %}
    <!-- more: og:title og:url og:description article:published_time article:modified_time article:author og:site_name og:image -->
    {% if favicon %}<link rel="shortcut icon" href="{{ favicon }}">{% endif %}

    <title>{% block page_title %}Local-Blog{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link href="/static/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/static/css/codehilite.css" rel="stylesheet">
    <link href="/static/css/blog.css" rel="stylesheet">
    <link href="/static/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    {{ additional_header_html }}
  </head>
  {% endblock %}

  <body>

    <div class="blog-masthead">
      <div class="container">
        <nav class="blog-nav">
          <a class="blog-nav-item {% if active=='home' %}active{% endif %}" href="/">Home</a>
          <a class="blog-nav-item {% if active=='categories' %}active{% endif %}" href="/categories">Categories</a>
          <a class="blog-nav-item {% if active=='tags' %}active{% endif %}" href="/tags">Tags</a>
          <a class="blog-nav-item {% if active=='search' %}active{% endif %}" href="/search">Search</a>
        </nav>
      </div>
    </div>

    <div class="container blog-main-area">
      {% if ua.is_pc or ua.is_tablet %}
      <div class="row">
        <div class="col-sm-12">
          <div class="leaderboard-container">
            {% if show_experiment %}
              {{ experiment_html }}
            {% else %}
              {{ additional_leaderboard_html }}
            {% endif %}
          </div>
        </div>
      </div>
      {% endif %}
      <div class="row">
        <div class="col-sm-9 blog-main">
          <div class="blog-header">
            <h1 class="blog-title"><a class="headline-link" href="/">{{ blog_title }}</a></h1>
            <p class="lead blog-description">{{ catchphrase or "Your blog served locally." }}</p>
          </div>
          {% block content %}{% endblock %}
        </div><!-- /.blog-main -->

        <div class="col-sm-3 blog-sidebar">
          {% if about is defined %}
          <div class="sidebar-module sidebar-module-inset">
            <h4>About</h4>
            <p>{{ about }}</p>
          </div>
          {% endif %}
          {% if ua.is_pc and additional_sidebar_html %}
          <div class="sidebar-additional">
            {{ additional_sidebar_html }}
          </div>
          {% endif %}
          <div class="sidebar-module">
            <h4>Archives</h4>
            <ol class="list-unstyled">
              {% for month in months %}
                {% if loop.index == 5 %}
                <button id="archive-more-button" class="btn btn-default btn-sm collapse in" data-toggle="collapse" data-target="#archive-more,#archive-more-button">
                  more...
                </button>
                <div id="archive-more" class="collapse">
                {% endif %}
                <li><a href="/{{ month.strftime('%Y/%m') }}/">{{ month.strftime('%B %Y') }}</a></li>
                {% if loop.last %}</div>{% endif %}
              {% endfor %}
            </ol>
          </div>
          {% if external_links %}
          <div class="sidebar-module">
            <h4>Elsewhere</h4>
            <ol class="list-unstyled">
              {% for link in external_links %}
              <li><a href="{{ link.url }}">{{ link.name }}</a></li>
              {% endfor %}
            </ol>
          </div>
          {% endif %}
        </div><!-- /.blog-sidebar -->

      </div><!-- /.row -->

    </div><!-- /.container -->

    <footer class="blog-footer">
      <p>Blog by {{ author }}.</p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="/static/js/jquery-2.2.3.min.js"></script>
    <script src="/static/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="/static/js/ie10-viewport-bug-workaround.js"></script>

    <script src="/static/js/custom.js"></script>
  </body>
</html>

